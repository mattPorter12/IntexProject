@model IEnumerable<Intex.Models.WorkOrder>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkOrderNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatusID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    int i = 0;
    <tr>
        <td>
            @Html.ActionLink(item.WorkOrderNum.ToString(), "Compounds", new { id = item.WorkOrderNum})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @ViewBag.OrderStatusDesc[item.OrderStatusID]
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WorkOrderNum }) |
            @Html.ActionLink("Details", "Details", new { id=item.WorkOrderNum }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WorkOrderNum })
        </td>
    </tr>
    i++;
}

</table>
